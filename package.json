{
    "name": "videoplayer",
    "version": "0.0.0",
    "main": "electron/main.js",
    "scripts": {
        "ng": "ng",
        "start": "ng serve --host 127.0.0.1",
        "build": "ng build",
        "watch": "ng build --watch --configuration development",
        "test": "ng test",
        "electron": "electron .",
        "electron:dev": "ELECTRON_START_URL=http://127.0.0.1:4200 electron .",
        "build:mac": "ng build --base-href ./ && electron-builder --mac"
    },
    "private": true,
    "dependencies": {
        "@angular/common": "^19.2.0",
        "@angular/compiler": "^19.2.0",
        "@angular/core": "^19.2.0",
        "@angular/forms": "^19.2.0",
        "@angular/platform-browser": "^19.2.0",
        "@angular/platform-browser-dynamic": "^19.2.0",
        "@angular/router": "^19.2.0",
        "cors": "^2.8.6",
        "electron-is-dev": "^3.0.1",
        "express": "^5.2.1",
        "ffmpeg-static": "^5.3.0",
        "ffprobe-static": "^3.1.0",
        "fluent-ffmpeg": "^2.1.3",
        "rxjs": "~7.8.0",
        "tslib": "^2.3.0",
        "zone.js": "~0.15.0"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "^19.2.19",
        "@angular/cli": "^19.2.19",
        "@angular/compiler-cli": "^19.2.0",
        "@types/jasmine": "~5.1.0",
        "electron": "^40.0.0",
        "electron-builder": "^26.4.0",
        "jasmine-core": "~5.6.0",
        "karma": "~6.4.0",
        "karma-chrome-launcher": "~3.2.0",
        "karma-coverage": "~2.2.0",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "~2.1.0",
        "typescript": "~5.7.2"
    },
    "build": {
        "appId": "com.jos.videoplayer",
        "productName": "VideoPlayer",
        "mac": {
            "target": "dmg"
        },
        "files": [
            "dist/**/*",
            "electron/**/*",
            "package.json"
        ],
        "extraResources": [
            {
                "from": "node_modules/ffmpeg-static/ffmpeg",
                "to": "ffmpeg"
            },
            {
                "from": "node_modules/ffprobe-static/bin/darwin/${arch}/ffprobe",
                "to": "ffprobe"
            }
        ],
        "directories": {
            "output": "release"
        }
    }
}